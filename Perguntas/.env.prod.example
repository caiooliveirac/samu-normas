# Exemplo de variáveis para produção
# Copie para .env.prod e ajuste valores seguros

DJANGO_SETTINGS_MODULE=samu_q.settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=coloque_uma_secret_key_muito_longa_aqui
ALLOWED_HOSTS=seu.dominio.com,IP_PUBLICO,localhost
# Se usar Nginx com domínio, mantenha ALLOWED_HOSTS em sincronia.
# Ex: ALLOWED_HOSTS=app.exemplo.com,localhost,127.0.0.1
# (Não precisa configurar SERVER_NAME separado a menos que vá usar validação extra.)

# Banco interno (MariaDB via compose)
DB_ENGINE=mysql
DB_NAME=samu_q
DB_USER=samu_q
DB_PASSWORD=trocar_senha_forte
DB_HOST=db
DB_PORT=3306
DB_CONN_MAX_AGE=60
DB_ATOMIC_REQUESTS=True

# Gunicorn tuning
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=60

# Static collection (1 para ativar no entrypoint)
COLLECT_STATIC=1
